#include <stdio.h>
#include <string.h>

typedef struct {
    char name[13];
    int roll_no;
    float sgpa;
} Student;

void InsertionSort(Student arr[], int n) {
    int i, j;
    Student key;
    for (i = 1; i < n; i++) {
        key = arr[i];
        j = i - 1;
        while (j >= 0 && strcmp(arr[j].name, key.name) > 0) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}


void printArray(Student arr[], int n) {
    int i;
    printf("Name\t\tRoll No\tSGPA\n");
    printf("\n");
    for (i = 0; i < n; i++) {
        printf("%-10s\t%4d\t%.2f\n", arr[i].name, arr[i].roll_no, arr[i].sgpa);
    }
}

int main() {
    Student arr[] = {
        {"Aarya",   1, 9.5},
        {"Soham",   4, 8.9},
        {"Alex",    5, 8.2},
        {"Sahil",   2, 8.0},
        {"Manan",   3, 9.1},
        {"Henry",   6, 7.5},
        {"Jenelia", 7, 8.8},
        {"Tom",     11, 7.3},
        {"Jerry",   8, 8.1},
        {"Sunil",   9, 7.8},
        {"Yeman",   10, 8.4},
        {"Aloka",   12, 8.6},
        {"Elbert",  13, 7.7}
    };
    int n = sizeof(arr) / sizeof(arr[0]);

    InsertionSort(arr, n);
    printArray(arr, n);

    return 0;
}
