#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include <string.h>

int prec(char c) {
    if (c == '^')
        return 3;
    else if (c == '/' || c == '*')
        return 2;
    else if (c == '+' || c == '-')
        return 1;
    else
        return -1;
}

void infixToPostfix(char *exp) {
    int len = strlen(exp);
    char result[len + 1];   // result array
    char stack[len];        // stack array
    int j = 0;
    int top = -1;

    for (int i = 0; i < len; i++) {
        char c = exp[i];

        // If the character is an operand, add to result
        if (isalnum(c))
            result[j++] = c;

        // If it is an opening parenthesis, push to stack
        else if (c == '(')
            stack[++top] = '(';

        // If it is a closing parenthesis, pop until '('
        else if (c == ')') {
            while (top != -1 && stack[top] != '(') {
                result[j++] = stack[top--];
            }
            top--; // remove '('
        }

        // Operator encountered
        else {
            while (top != -1 &&
                   (prec(c) < prec(stack[top]) ||
                   (prec(c) == prec(stack[top]) && c != '^'))) {
                result[j++] = stack[top--];
            }
            stack[++top] = c;
        }
    }

    // Pop remaining operators
    while (top != -1) {
        result[j++] = stack[top--];
    }

    result[j] = '\0';  // null terminate
    printf("%s\n", result);
}

int main() {
    char exp[] = "a+b*(c^d-e)^(f+g*h)";
    infixToPostfix(exp);  // do the conversion and print
    return 0;
}
